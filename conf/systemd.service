[Unit]
Description=Matrix Instagram bridge
After=matrix-synapse.service

[Service]
Type=simple
User=__APP__
WorkingDirectory=/opt/yunohost/__APP__
ExecStart=python3 -m mautrix_telegram-c=/opt/yunohost/__APP__/config.yaml >> /var/log/__APP__/log.log 2>&1
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
